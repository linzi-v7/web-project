<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EDMS</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* General page styling */
        body {
            background-color: #f8f9fa; /* Light gray for a clean background */
            color: #343a40; /* Dark gray text */
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        header {
            margin-bottom: 20px;
        }

        main {
            flex: 1;
            padding: 20px;
            background-color: #ffffff; /* White content background */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); /* Light shadow around the body */
            border-radius: 8px; /* Rounded corners */
        }

        footer {
            background-color: #343a40; /* Matches navbar color */
            color: #ffffff; /* White text for footer */
            text-align: center;
            padding: 10px 0;
        }

            footer a {
                color: #ffc107; /* Gold for footer links */
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Navbar styles */
        .navbar {
            background-color: #343a40; /* Dark background for navbar */
            color: #ffffff;
        }

        .navbar-brand, .nav-link {
            color: #ffffff;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #ffc107; /* Gold highlight on hover */
            }

        /* Link styles in the body */
        a {
            color: #007bff; /* Bootstrap primary color */
            text-decoration: none;
            font-weight: 500;
        }

            a:hover {
                text-decoration: underline;
            }

        /* Ensure footer stays at the bottom */
        html, body {
            height: 100%;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EDMS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Emp" asp-action="Index">Employee Management</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dep" asp-action="Index">Department Management</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p class="mb-1">&copy; 2024 - EDMS</p>
            <p>
                <a href="mailto:support@EDMS.com">Contact Us</a> |
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            </p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4">Welcome to the Management System</h1>
    <p class="lead">Efficiently manage employees and departments with ease.</p>
</div>

<hr />

<!-- Modules Section -->
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Employee Management</h5>
                    <p class="card-text">View, edit, and manage employee records.</p>
                    <a asp-action="EmployeeManagement" asp-controller="Home" class="btn btn-primary">
                        Manage Employees
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Department Management</h5>
                    <p class="card-text">Create, update, and manage departments.</p>
                    <a asp-action="DepartmentManagement" asp-controller="Home" class="btn btn-info">
                        Manage Departments
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About Section -->
<div class="container mt-5">
    <div class="text-center">
        <h2>About This System</h2>
        <p class="text-muted">
            This management system provides tools to help you organize and manage your employees and departments efficiently.
            Streamline your workflows and boost productivity with our easy-to-use interface.
        </p>
    </div>
</div>

<hr />

<!-- Footer Links Section -->
<div class="container text-center mt-4">
    <p class="text-secondary">
        Need assistance? <a href="mailto:support@sampleproject.com" class="text-primary">Contact Us</a> or visit our
        <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-primary">Privacy Policy</a> for more details.
    </p>
</div>

